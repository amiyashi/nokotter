<div class="pb-3" style="display: flex; align-items: center;">
  <h5 class="pb-3"><%= @customer.nickname %>さんのマイページ</h5>
  <p id="follow_buttons_<%= @customer.id %>" style="margin-left: 20px;">
    <% if @customer != current_customer %>
      <%= render "public/relationships/btn", customer: @customer %>
    <% end %>
  </p>
</div>
<div class="tabs">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="tab" href="#section1">投稿済みレシピ</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#section2">保存済みレシピ</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#section3">プロフィール</a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="section1" class="tab-pane fade show active">
      <div class="container">
        <div class="row">
          <% @recipes.each do |recipe| %>
          <div class="col-md-4  mb-5 mt-5">
            <div class="card">
              <%= image_tag recipe.image, class: "img-fluid" %>
              <div class="card-body text-center">
                <p class="card-text">
                  <%= image_tag recipe.customer.get_profile_image(80,80) %>
                  <%= link_to recipe_path(recipe) do %>
                    <%= recipe.title %>
                  <% end %>
                 </p>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>

    <div id="section2" class="tab-pane fade">
      <div class="container">
        <div class="row">
          <% if @bookmark_list.present? %>
            <% @bookmark_list.each do |recipe| %>
            <div class="col-md-4  mb-5 mt-5">
              <div class="card">
                <%= image_tag recipe.image, class: "img-fluid" %>
                <div class="card-body text-center">
                  <p class="card-title">
                    <%= image_tag @customer.get_profile_image(100,100) %>
                    <%= link_to recipe_path(recipe) do %>
                      <%= recipe.title %>
                    <% end %>
                  </p>
                </div>
              </div>
            </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div id="section3" class="tab-pane fade">
      <div class="container">
        <div class="row">
          <div class="col-10 mx-auto">
            <div class="d-flex align-items-center">
              <% if @customer == current_customer %>
                <strong class="mt-4 mb-3"><%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-outline-secondary ml-4 mt-2" %></strong>
              <% end %>
            </div>
            <table class="table table-list">
              <tr>
                <td><%= image_tag @customer.get_profile_image(100,100) %></td>
                <td>
                  <h6><strong class="pr-2"><%= link_to @customer.followings.count, followings_customer_path %></strong>フォロー中</h6>
                  <h6><strong class="pr-2"><%= link_to @customer.followers.count, followers_customer_path %></strong>フォロワー</h6>
                </td>
              </tr>
              <tr>
                <td style="width: 20%", class="bg-light">ユーザーネーム</td>
                <td><%= @customer.nickname %></td>
              </tr>
              <tr>
                <td class="bg-light">生年月日</td>
                <td><%= @customer.birth_date %></td>
              </tr>
              <tr>
                <td class="bg-light">メールアドレス</td>
                <td><%= @customer.email %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>