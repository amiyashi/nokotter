<!DOCTYPE html>
<html>
  <head>
    <title>Nokotter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!--style.cssよりも前にFont Awesomeに関する記述-->
    <script src="https://kit.fontawesome.com/fe8aa78a6e.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if customer_signed_in? %>
        <nav class="nav">
          <li class="nav-item">
            <%= link_to "マイページ", customer_path(current_customer), class: "nav-link active" %>
          </li>
          <!--<li class="nav-item">-->
          <!--  <%#= link_to "タイムライン", followings_customer_path, class: "nav-link active" %>-->
          <!--</li>-->
          <li class="nav-item">
            <%= link_to "レシピ一覧", recipes_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link active" %>
          </li>
        </nav>
      <% elsif admin_signed_in? %>
        <nav class="nav">
          <li class="nav-item">
            <%= link_to "ユーザー一覧", admin_customers_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link active" %>
          </li>
        </nav>
      <% else %>
        <nav class="nav">
          <li class="nav-item">
            <%= link_to "これはなに？", about_homes_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to 'ゲストログイン', public_guest_sign_in_path, method: :post, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "新規登録", new_customer_registration_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログイン", new_customer_session_path, class: "nav-link active" %>
          </li>
        </nav>
      <% end %>
    </header>

    <main class="mb-auto">
      <%= flash[:notice] %>
      <%= yield %>
    </main>

    <%= render 'layouts/footer' %>

  </body>
</html>