<table class="table" style="background-color: rgba(255, 255, 255, 0.5);">
  <tbody>
  <% recipe.comments.each do |comment| %>
    <tr>
      <td><%= image_tag comment.customer.get_profile_image(60,60), class: "img-fluid" %></td>
      <td>
        <p><%= comment.customer.nickname %></p>
        <p><%= comment.content %></p>
      </td>
      <td>
        <% if comment.customer == current_customer %>
          <%= link_to "コメント削除", recipe_comment_path(comment.recipe, comment), method: :delete, remote: true, class: "btn-sm btn-outline-danger" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>