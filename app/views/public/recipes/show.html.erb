  <!--タグ-->
  <div class="row">
    <% @recipe_tags.each do |tag| %>
      <i class="fa-sharp fa-solid fa-tag"></i>
      <%= link_to tag.name, search_tag_recipes_path(tag_id: tag.id) %>
    <% end %>
  </div>

  <div class="row">
    <% if @recipe.customer == current_customer %>
      <%= link_to '編集する', edit_recipe_path(@recipe), class: "btn btn-outline-secondary ml-4 mb-2" %>
      <%= link_to '削除する', recipe_path(@recipe), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  　<% end %>
  </div>

  <div class="row">
    <table>
      <tbody>
      <% @recipe.comments.each do |comment| %>
        <tr>
          <td><%= comment.customer.last_name %><%= comment.customer.first_name %></td>
          <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= comment.content %></td>
          <td>
            <% if comment.customer == current_customer %>
              <%= link_to "編集する", edit_recipe_path(@recipe) %>
              <%= link_to "削除", recipe_comment_path(comment.recipe, comment), method: :delete %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div>
    <%= form_with model: [@recipe, @comment] do |f| %>
      <%= f.text_area :content, rows: '1', placeholder: "コメントをここに" %>
      <%= f.submit "送信する" %>
    <% end %>
  </div>

