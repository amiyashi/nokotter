<div class="container">

  <div class="row">
    <div class="col-12 col-md-6 col-lg-4">
      <%= search_form_for @q do |f| %>
      <%= f.label :title, "レシピ検索", class: "m-0" %>
      <div class="input-group mb-3">
        <!--<input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="button-addon2">-->
        <%= f.search_field :title_or_tags_name_cont, class: "form-control" %>
        <div class="input-group-append">
          <!--<button class="btn btn-outline-secondary" type="button" id="button-addon2">Button</button>-->
          <%= f.submit '検索', class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
      <% end %>
    </div>
    <!--<p class="m-0">レシピ検索</p>-->

      <!--<%= search_form_for @q do |f| %>-->
      <!--  <%= f.label :tags, "タグ" %>-->
      <!--  <%= f.search_field :tags_name_cont %>-->
      <!--  <%= f.submit '検索', class: 'btn btn-primary' %>-->
      <!--<% end %>-->
  </div>

  <div class="row">
    <div class="col-md-6">
      <h3>みんなの残り物レシピ</h3>
    </div>
    <div class="col-md-6">
      <!-- レシピ追加ボタン -->
      <%= link_to "レシピを追加する", new_recipe_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <div class="d-flex">
    <!-- タグ一覧 -->
    <% @tag_list.each do |list| %>
      <i class="fas fa-tag"></i>
      <%= link_to list.name, search_tag_recipes_path(tag_id: list.id) %>
      (<%= list.recipes.count %>)
    <% end %>
  </div>

  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-4  mb-5 mt-5">
        <div class="card">
          <%= image_tag recipe.image, class: "img-fluid" %>
          <div class="card-body text-center">
            <h5 class="card-title"><%= link_to recipe.title, recipe_path(recipe) %></h5>
            <p class="card-text">
              <%= @recipe.tags %>
              <%= recipe.bookmarks.count %> 保存
              <%= link_to "#{recipe.comments.count} コメント", recipe_path(recipe.id) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
