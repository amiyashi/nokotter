<div class="container">
  <div class="row">
    <div class="col">
      <div class="d-flex align-items-center">
        <h4 class="my-3 ml-4">マイページ編集</h4>
      </div>
      <%= form_with model: @customer, url: customer_path(current_customer), method: :patch do |f| %>
      <table class="table table-bordered w-75">
        <tbody>
          <tr>
            <td style="width: 20%", class="bg-light">名前</td>
            <td><%= f.text_field :last_name, placeholder: "令和", autofocus: true %></td>
            <td><%= f.text_field :first_name, placeholder: "花子" %></td>
          </tr>
          <tr>
            <td class="bg-light">フリガナ</td>
            <td><%= f.text_field :last_name_kana, placeholder: "レイワ" %></td>
            <td><%= f.text_field :first_name_kana, placeholder: "ハナコ" %></td>
          </tr>
          <tr>
            <td class="bg-light"><%= f.label :birth_date, "生年月日" %></td>
            <td><%= f.date_select :birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %></td>
            <td></td>
          </tr>
          <tr>
            <td class="bg-light"><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
          </tr>
        </tbody>
      </table>
      <%= f.submit "編集内容を保存", class:"btn btn-outline-secondary" %>
        <%= link_to "退会する", confirm_withdrawal_customers_path, class:"btn btn-outline-danger" %>
      <% end %>
    </div>
  </div>
</div>
