<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2><%= @customer.nickname %>さんの会員詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1">
      <table class="table" style="background-color: white;">
        <tr>
          <th class="table-active">会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th class="table-active">氏名</th>
          <td><%= @customer.nickname %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th class="table-active">生年月日</th>
          <td><%= @customer.birth_date %></td>
        </tr>
        <tr>
          <th class="table-active">会員ステータス</th>
          <% if @customer.is_deleted == false %>
            <td class="text-success font-weight-bold">有効</td>
          <% else %>
            <td class="text-danger font-weight-bold">退会<td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-lg-6 px-sm-0 offset-sm-1">
      <%= link_to '編集する', edit_admin_customer_path(@customer), class:"btn btn-success my-1 mx-4 px-4" %>
    </div>
  </div>

</div>