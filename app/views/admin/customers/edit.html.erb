<div class="container">
  <div class="row">
    <h2><%= @customer.nickname %>さんの会員情報編集</h2>
  </div>
  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1">
        <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
          <table class="table" style="background-color: white;">
            <tr>
              <td><%= f.file_field :profile_image, accept: "image/*" %></td>
              <td></td>
            </tr>
            <tr>
              <th>ユーザーネーム</th>
              <td><%= f.text_field :nickname, autofocus: true %></td>
            </tr>
            <tr>
              <th><%= f.label :birth_date, "生年月日" %></th>
              <td><%= f.date_select :birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %></td>
            </tr>
            <tr>
              <th><%= f.label :email, "メールアドレス" %></th>
              <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
            </tr>
            <tr>
              <th>会員ステータス</th>
                <td>
                  <%= f.radio_button :is_deleted, false %>
                  <%= f.label :is_deleted, "有効" %>
                  <%= f.radio_button :is_deleted, true %>
                  <%= f.label :is_deleted, "退会" %>
                <td>
            </tr>
          </table>
          <%= f.submit "編集内容を保存", class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>