      <!--ブックマークとコメント数-->
      <div class="row">
        <div class="col-md-1">
          <div id="favorite_btn_<%= @recipe.id %>">
            <%= render "public/bookmarks/btn", recipe: @recipe %>
          </div>
        </div>
