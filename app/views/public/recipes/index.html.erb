<div class="container">

  <%= render 'public/shared/search_form', q: @q %>

  <div class="row mt-5">
    <div class="col-md-4">
      <h3 class="title">みんなの残り物レシピ</h3>
    </div>
        <!--<div class="d-flex">-->
        <!-- タグ一覧 -->
        <!--<%# @tag_list.each do |list| %>-->
        <!--  <i class="fas fa-tag"></i>-->
        <!--  <%#= link_to list.name, search_tag_recipes_path(tag_id: list.id) %>-->
        <!--  (<%#= list.recipes.count %>)-->
