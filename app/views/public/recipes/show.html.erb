      <!--投稿者とフォローボタン-->
      <div class="row">
        <div class="col-md-2">
          <i class="fa-solid fa-circle-user"></i>
          <%= link_to "作った人", customer_path(@recipe.customer) %>
        </div>
        <div class="col-md-2-offset-8">
          <!--フォローボタン-->
          <% if current_customer.following?(@recipe.customer) %>
