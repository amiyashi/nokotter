<div class="container d-flex justify-content-center align-items-center">
  <div class="row justify-content-center">
    <div class="col" style="background-color: rgba(255, 255, 255, 0.5);">
      <h4 class="my-3 text-center">管理者ログイン</h4>

      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="table-responsive">
          <table class="table table-borderless">
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td><%= f.label :password, "パスワード" %></td>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "ログイン" %></td>
            </tr>
          </table>
        </div>
      <% end %>
      <% if controller_name != 'sessions' %>
        <%= link_to "Log in", new_session_path(resource_name) %><br />
      <% end %>
    </div>
  </div>
</div>