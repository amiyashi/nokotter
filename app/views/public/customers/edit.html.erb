<div class="d-flex align-items-center">
  <h2>マイページ編集</h2>


<div class="container">
  <div class="row">
  </div>

  <div class="row">
    <%= form_with model: @customer, url: customer_path(current_customer), method: :patch do |f| %>
    <table>
      <tbody>
        <tr>
          <td style="width: 30%">名前</td>
          <td style="width: 35%"><%= f.text_field :last_name, placeholder: "令和", autofocus: true %></td>
          <td style="width: 35%"><%= f.text_field :first_name, placeholder: "花子" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana, placeholder: "レイワ" %></td>
          <td><%= f.text_field :first_name_kana, placeholder: "ハナコ" %></td>
        </tr>
        <tr>
          <td><%= f.label :birth_date, "生年月日" %></td>
          <td><%= f.date_select :birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <div class="mx-auto mt-3 mb-2">
              <%= f.submit "編集内容を保存", class: "btn btn-success" %>
            </div>
          </td>
          <td>
            <div class="ml-auto mt-3 mb-2">
              <%= link_to "退会する", confirm_withdrawal_customers_path, class: "btn btn-danger" %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>
</div>
